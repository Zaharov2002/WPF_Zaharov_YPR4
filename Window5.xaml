<Window x:Class="WPF_Zaharov_PR4.Window5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Zaharov_PR4"
        mc:Ignorable="d"
        Title="Window5" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150*"></RowDefinition>
            <RowDefinition Height="150*"></RowDefinition>
            <RowDefinition Height="150*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content=".col-md-8" Height="50" Width="550" HorizontalAlignment="Left"/>
        <Button Content=".col-6 .col-md-4" Height="50" Width="250" HorizontalAlignment="Right"/>
        <Button Content=".col-6 .col-md-4" Height="50" Width="270" HorizontalAlignment="Left" Grid.Row="1"/>
        <Button Content=".col-6 .col-md-4" Height="50" Width="270" HorizontalAlignment="Center" Grid.Row="1"/>
        <Button Content=".col-6 .col-md-4" Height="50" Width="270" HorizontalAlignment="Right" Grid.Row="1"/>
        <Button Content=".col-6" Height="50" Width="400" HorizontalAlignment="Left" Grid.Row="2"/>
        <Button Content=".col-6" Height="50" Width="400" HorizontalAlignment="Right" Grid.Row="2"/>
    </Grid>
</Window>
